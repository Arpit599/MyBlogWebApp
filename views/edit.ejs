<% include partials/header %>
<div class="ui main container text segment">
  <div class="ui huge header">Edit Blog </div>
  <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="post">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%=blog.title%>">
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" placeholder="Image" value="<%=blog.image%>">
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="blog[body]" required><%-blog.body%></textarea>
    </div>
    <button class="ui teal basic button">Submit</button>
  </form>
</div>
<% include partials/footer %>
